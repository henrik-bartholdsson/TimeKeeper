@{
    ViewData["Title"] = "Home Page";
}

@model List<TimeKeeper.Data.Models.Invitation>


@if (@Model != null)
{
    foreach (var inv in @Model)
    {
        <div>
            <hr/>
            <h3>@inv.OrganisationName</h3>
            <h4>@inv.Header</h4>
            <p>@inv.Message</p>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="invitations" asp-action="Accept" asp-route-id="@inv.Id">Accept</a>
                <a class="btn btn-sm btn-warning" asp-controller="invitations" asp-action="Reject" asp-route-id="@inv.Id">Reject</a>
            </td>
        </div>
    }

}




